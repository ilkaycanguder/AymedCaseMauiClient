<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AymedCaseMauiClient.Views.ServerPage"
             Title="Aymed Server">
  <VerticalStackLayout Padding="20" Spacing="12">
    <Label Text="Port" FontAttributes="Bold"/>
    <Entry Text="{Binding Port}" Keyboard="Numeric"/>

    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
      <Button Grid.Column="0" Text="Sunucuyu Başlat" Command="{Binding StartServerCommand}"/>
      <Button Grid.Column="1" Text="Sunucuyu Durdur" Command="{Binding StopServerCommand}"/>
    </Grid>

    <Button Text="İstenilen" Command="{Binding OpenAnswerCommand}"/>
    
    <!-- Sunucu Durum Bilgisi -->
    <Frame Margin="0,10,0,0" BorderColor="LightGray" Padding="10">
      <Label Text="{Binding StatusMessage}" HorizontalOptions="Center" FontAttributes="Bold"/>
    </Frame>
  </VerticalStackLayout>
</ContentPage>
